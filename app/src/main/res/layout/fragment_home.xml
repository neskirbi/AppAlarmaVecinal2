<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorGrayDark"
    tools:context=".Principal.ui.home.HomeFragment">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="ALARMA VECINAL"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:letterSpacing="0.05" />

    <!-- Imagen/Botón de alarma con efecto de resalte -->
    <ImageView
        android:id="@+id/imageViewAlarma"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@id/tvTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_logo_foreground"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Botón de activación de alarma"
        android:elevation="8dp"/>

    <!-- Contador regresivo -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewAlarma"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="5"
        android:textSize="52sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:visibility="invisible" />

    <!-- Instrucciones principales (EN LUGAR DE tvTiempo) -->
    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCountdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="⚠️ MANTÉN PRESIONADO POR 5 SEGUNDOS\nPARA ACTIVAR LA ALARMA DE EMERGENCIA"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:lineSpacingExtra="6sp" />

    <!-- Mensaje de estado -->
    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInstrucciones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="SISTEMA LISTO"
        android:textSize="14sp"
        android:textColor="@color/colorGreen"
        android:textStyle="bold" />

    <!-- Nota importante -->
    <TextView
        android:id="@+id/tvNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="30dp"
        android:text="🚨 USO EXCLUSIVO PARA EMERGENCIAS REALES\nTODOS LOS VECINOS RECIBIRÁN LA ALERTA"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textStyle="bold"
        android:lineSpacingExtra="4sp" />

</RelativeLayout>